// components/OrderModal.tsx
import { useState } from "react";
import { CardElement, useStripe, useElements } from "@stripe/react-stripe-js";

export default function OrderModal({ order }) {
  const stripe = useStripe();
  const elements = useElements();
  const [loading, setLoading] = useState(false);

  const handlePayment = async () => {
    setLoading(true);
    const res = await fetch("/api/stripe-create-payment", {
      method: "POST",
      body: JSON.stringify({ orderId: order.id, amount: order.amount }),
    });
    const { clientSecret } = await res.json();

    const result = await stripe.confirmCardPayment(clientSecret, {
      payment_method: {
        card: elements.getElement(CardElement)!,
        billing_details: { name: order.customerName },
      },
    });

    if (result.error) {
      alert("Payment failed: " + result.error.message);
    } else {
      alert("Payment authorized, held in escrow.");
    }
    setLoading(false);
  };

  return (
    <div>
      <h2>Complete Your Order</h2>
      <CardElement />
      <button disabled={!stripe || loading} onClick={handlePayment}>
        {loading ? "Processing..." : "Pay Securely"}
      </button>
    </div>
  );
}
